@model Projet_Final_Web.ViewModel.PersonnalisationViewModel

@{
    ViewData["Title"] = "Personnalisation";
}

<h1>Personnalisation de l'environnement</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Index">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Prenom" class="form-control" type="hidden" />
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword" class="control-label"></label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Courriel_Sur_Ajout" class="control-label"></label>
                <input asp-for="Courriel_Sur_Ajout" class="form-control">
            </div>
            <div class="form-group">
                <label asp-for="Courriel_sur_Retrait" class="control-label"></label>
                <input asp-for="Courriel_sur_Retrait" class="form-control">
            </div>
            <div class="form-group">
                <label asp-for="Courriel_sur_Appropriation" class="control-label"></label>
                <input asp-for="Courriel_sur_Appropriation" class="form-control">
            </div>
            <div class="form-group">
                <label asp-for="NbDVDParPage" class="control-label"></label>
                <input type="number" asp-for="NbDVDParPage" class="form-control">
            </div>
            <div class="form-group">
                <input type="submit" value="Sauvegarder" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Retour à la liste des membres</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
}

