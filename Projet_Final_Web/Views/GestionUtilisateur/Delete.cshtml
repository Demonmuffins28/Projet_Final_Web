}

<h1>Suppression</h1>

<h3>Êtes-vous sur de vouloir supprimer cet utilisateur?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Prenom)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Prenom)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Courriel)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Courriel)
        </dd>
